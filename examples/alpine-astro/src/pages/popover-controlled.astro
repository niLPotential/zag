---
import Nav from "../components/Nav.astro"
import Layout from "../layouts/Layout.astro"
---

<Layout>
  <div
    class="page"
    x-data="{open: false}"
    x-id="['popover']"
    x-popover="{id: $id('popover'), onOpenChange: (details) => {open = details.open}, open}"
  >
    <Nav />
    <main>
      <button x-popover:trigger>Click me</button>
      <template x-teleport="body">
        <div x-popover:positioner>
          <div x-popover:content>
            <div x-popover:title>Presenters</div>
            <div x-popover:description>Description</div>
            <button x-on:click="open = false">Action Button</button>
          </div>
        </div>
      </template>
    </main>
  </div>
</Layout>
